---
interface Props {
  src: string;
}

const { src } = Astro.props;
---

<div style={{ position: 'relative', width: '100%', paddingBottom: '56.25%' }}>
  <video
    style={{
      position: 'absolute',
      top: 0,
      left: 0,
      width: '100%',
      height: '100%'
    }}
    controls
    src={src}
  >
    Your browser does not support the video tag.
  </video>
</div> 