---
// This is the "frontmatter" section of an Astro component.
// It's where you can write JavaScript that runs only on the server
// during the build process or when the component is being rendered.
---

<div class="counter-container">
  <p>You've clicked the button this many times:</p>
  
  <script type="module">
    // This is the client-side JavaScript for the interactive component.
    // Astro will only send this JS to the browser if it detects a client directive
    // like `client:load` on the component in the MDX file.

    // A simple vanilla JavaScript counter example
    class SimpleCounter extends HTMLElement {
      constructor() {
        super();
        this.count = 0;
        this.button = this.querySelector('button');
        this.display = this.querySelector('.count-display');
        this.button.addEventListener('click', this.increment.bind(this));
        this.updateDisplay();
      }

      increment() {
        this.count++;
        this.updateDisplay();
      }

      updateDisplay() {
        this.display.textContent = this.count;
      }
    }

    customElements.define('simple-counter', SimpleCounter);
  </script>

  <simple-counter>
    <span class="count-display">0</span>
    <button>Increment</button>
  </simple-counter>
</div>

<style>
  /* Scoped CSS for the component */
  .counter-container {
    padding: 1em;
    margin: 1em 0;
    text-align: center;
    border-radius: 8px;
    background: transparent;
    color: var(--text);
    border: none;
    transition: all 0.3s ease;
  }
  
  .counter-container p {
    color: var(--text);
    margin: 0 0 1em 0;
  }
  
  .counter-container button {
    background-color: var(--link-color);
    color: var(--background);
    border: none;
    padding: 0.5em 1em;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1em;
    margin-top: 0.5em;
    transition: all 0.2s ease;
    font-weight: 500;
  }
  
  .counter-container button:hover {
    opacity: 0.8;
    transform: translateY(-1px);
  }
  
  .count-display {
    font-size: 1.5em;
    font-weight: bold;
    color: var(--text);
    display: block;
    margin-bottom: 0.5em;
  }

</style> 