<script>
  function setupCopyButtons() {
    console.log('Setting up copy buttons...');
    const buttons = document.querySelectorAll('.copy-code-button');
    console.log('Found buttons:', buttons.length);
    
    buttons.forEach((button) => {
      button.addEventListener('click', async () => {
        console.log('Button clicked');
        const wrapper = button.parentElement;
        console.log('Wrapper:', wrapper);
        const pre = wrapper?.querySelector('pre');
        console.log('Pre:', pre);
        const codeBlock = pre?.querySelector('code');
        console.log('Code block:', codeBlock);
        
        if (!codeBlock) {
          console.error('No code block found');
          return;
        }

        try {
          const text = codeBlock.textContent || '';
          console.log('Copying text:', text);
          await navigator.clipboard.writeText(text);
          button.setAttribute('aria-label', 'Copied!');
          setTimeout(() => {
            button.setAttribute('aria-label', 'Copy code');
          }, 2000);
        } catch (err) {
          console.error('Failed to copy text: ', err);
        }
      });
    });
  }

  // Run on initial load
  if (typeof document !== 'undefined') {
    setupCopyButtons();
  }

  // Run after view transitions
  document.addEventListener('astro:page-load', setupCopyButtons);
</script>

