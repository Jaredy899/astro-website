---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import BlogPostCard from '../../../components/BlogPostCard.astro';
import JCLogo from '../../../components/JCLogo.astro';

export async function getStaticPaths() {
  const allPosts = await getCollection('blog');
  const tagSet = new Set();
  for (const post of allPosts) {
    if (Array.isArray(post.data.tags)) {
      post.data.tags.forEach(tag => tagSet.add(tag));
    }
  }
  return Array.from(tagSet).map(tag => ({ params: { tag } }));
}

const { tag } = Astro.params;
const tagStr = tag as string;
const allPosts = await getCollection('blog');
const posts = allPosts.filter(post =>
  Array.isArray(post.data.tags) && post.data.tags.includes(tagStr) && !post.data.draft
);
---

<Layout title={`Posts tagged '${tag}'`} description={`All blog posts tagged with '${tag}'`}>
  <main class="blog-main">
    <div class="logo-container" transition:name="jc-logo">
      <a href="/" class="logo-link" aria-label="Return to home page">
        <JCLogo />
      </a>
    </div>
    <h1 class="blog-heading">Posts tagged <span class="tag-highlight">{tag}</span></h1>
    <div class="blog-list">
      {posts.length > 0 ? (
        posts.map((post: any) => <BlogPostCard post={post} />)
      ) : (
        <div class="no-posts">No posts found for this tag.</div>
      )}
    </div>
  </main>
</Layout>

<style>
.blog-main {
  max-width: 820px;
  margin: 0 auto;
  padding: 2.5rem 1.5rem 4rem 1.5rem;
  position: relative;
}
.logo-container {
  width: 40px;
  height: 40px;
  margin: 1rem auto 0.5rem auto;
  transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  color: var(--text) !important;
}
.logo-container :global(svg) {
  color: var(--text) !important;
}
.logo-link {
  display: block;
  text-decoration: none;
  transition: transform 0.3s ease;
}
.logo-link:hover {
  transform: scale(1.1);
}
.blog-heading {
  text-align: center;
  font-size: 2.5rem;
  font-family: 'Inter', system-ui, -apple-system, sans-serif;
  font-weight: 800;
  margin-top: 2.5rem;
  margin-bottom: 2.5rem;
  color: var(--text);
  letter-spacing: -0.01em;
}
.tag-highlight {
  background: #9ca3af;
  color: #fff;
  border-radius: 999px;
  padding: 0.15em 0.7em;
  font-size: 0.85em;
  font-weight: 700;
  margin-left: 0.25em;
}

:root.dark .tag-highlight {
  background: #6b7280;
}
.blog-list {
  display: flex;
  flex-direction: column;
}
.no-posts {
  text-align: center;
  color: var(--text);
  opacity: 0.7;
  font-size: 1.2rem;
  margin-top: 2.5rem;
}
@media (max-width: 600px) {
  .blog-main {
    padding: 1rem 0.5rem 2rem 0.5rem;
    border-radius: 0.5rem;
  }
  .blog-heading {
    font-size: 2rem;
    margin-top: 2rem;
    margin-bottom: 1.5rem;
  }
  .tag-highlight {
    font-size: 0.75em;
    padding: 0.1em 0.6em;
    margin-left: 0.15em;
  }
}
</style> 